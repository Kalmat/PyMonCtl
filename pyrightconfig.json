{
  // Oldest not EOL python version
  "pythonVersion": "3.7",
  "useLibraryCodeForTypes": true,
  "extraPaths": [
    "src/"
  ],
  "typeCheckingMode": "strict",
  // Extra strict. Optional options even in "strict" mode.
  "reportImplicitStringConcatenation": "error",
  "reportCallInDefaultInitializer": "error",
  "reportPropertyTypeMismatch": "error",
  "reportUnnecessaryTypeIgnoreComment": "error",
  // type: ignore comments are meant for mypy
  "enableTypeIgnoreComments": false,
  // False positives with TYPE_CHECKING and defered imports
  "reportImportCycles": "information",
  // As a library, we're allowed to use our own privates
  "reportPrivateUsage": "none",
  // Supporting common misused parameters from users that don't type-check is ok
  "reportUnnecessaryIsInstance": "none",
  // Some private classes are reused in private modules
  "reportUnusedClass": "none",
  // Keeping unused functions and variables for easier reference
  "reportUnusedVariable": "none",
  "reportUnusedFunction": "none",
}
